<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/css/arabic-fonts.css">
</head>

<body>
  <div class="container">
    <ul class="nav mb-5">
      <li class="nav-item">
        <a class="nav-link" href="/button/create/multiple">Tambah Banyak Data</a>
      </li>
    </ul>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama</th>
          <th scope="col">Key</th>
          <th scope="col">Code</th>
          <th scope="col">Arabic</th>
          <th scope="col">Arabic Sec</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% buttonData.forEach((item, index) => { %>
        <tr>
          <th class="pt-3" scope="row"><%= index + 1 %></th>
          <td class="pt-3"><%= item.name %></td>
          <td class="pt-3"><%= item.key %></td>
          <td class="pt-3"><%= item.code %></td>
          <td class="pt-3">
            <% if (item.arabic) { %>
            <span class="font-kitab fs-2"><%= eval('"' + item.arabic.unicode + '"') %></span>
            <% } else { %>
            Empty
            <% } %></td>
            <td class="pt-3">
              <% if (item.arabicSecond) { %>
              <span class="font-kitab fs-2"><%= eval('"' + item.arabicSecond.unicode + '"') %></span>
              <% } else { %>
              Empty
              <% } %></td>
          <td>
            <a href="/button/<%= item.id %>/show">Detail</a>
            <a href="/button/<%= item.id %>/edit">Edit</a>
            <form action="/button/<%= item.id %>?_method=DELETE" method="post">
              <button class="btn btn-link" type="submit">Hapus</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>